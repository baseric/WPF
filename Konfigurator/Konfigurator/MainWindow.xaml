<Window x:Class="Konfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konfigurator" Height="464" Width="984">
    <Grid Width="954" Height="432">
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"></RowDefinition>
            <RowDefinition Height="331*"></RowDefinition>
            <RowDefinition Height="41*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"></ColumnDefinition>
            <ColumnDefinition Width="758*"></ColumnDefinition>
            <ColumnDefinition Width="185*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Witaj w naszym konfiguratorze" Grid.Column="1" Height="28" Margin="244,12,245,0" Name="label1" VerticalAlignment="Top" />
        <Button Content="dalej" Grid.Column="1" Grid.Row="2" Height="23" Margin="0,12,180,0" Name="button1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" />
        <Button Content="zamknij" Grid.Column="1" Grid.Row="2" Height="23" HorizontalAlignment="Right" Margin="0,12,76,0" Name="button2" VerticalAlignment="Top" Width="75" />
        <Label Content="Modele" Grid.Column="1" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="23,172,0,0" Name="label2" VerticalAlignment="Top" Width="115" />
        <StackPanel Grid.Column="1" Grid.Row="1" Height="100" HorizontalAlignment="Left" Margin="23,206,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="115">
            <RadioButton Content="A1" Height="16" Name="radioButton1" />
            <RadioButton Content="A2" Height="16" Name="radioButton2" />
            <RadioButton Content="A3" Height="16" Name="radioButton3" />
            <RadioButton Content="A4" Height="16" Name="radioButton4" />
            <RadioButton Content="A5" Height="16" Name="radioButton5" />
            <RadioButton Content="A6" Height="16" Name="radioButton6" />
        </StackPanel>
        <Image Grid.Column="1" Grid.Row="1" Height="134" Margin="345,0,67,25" Name="image1" Stretch="Fill" VerticalAlignment="Bottom" />
        <Label Content="Wyglad" Grid.Column="1" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="481,138,0,0" Name="label3" VerticalAlignment="Top" />
        <Button Content="Wczytaj konfiguracje" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="40,148,0,0" Name="button3" VerticalAlignment="Top" Width="124" Grid.Column="2" />
        <Button Content="Nowa konfiguracja" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="40,84,0,0" Name="button4" VerticalAlignment="Top" Width="124" Grid.Column="2" />
        <Button Content="PDF" Grid.Column="2" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="64,23,0,0" Name="button5" VerticalAlignment="Top" Width="75" />
        <WrapPanel Grid.Column="1" Grid.Row="1" Height="29" HorizontalAlignment="Left" Margin="67,23,0,0" Name="wrapPanel1" VerticalAlignment="Top" Width="511">
            <Button Content="wersja" Height="23" Name="button6" Width="75" />
            <Button Content="silnik" Height="23" Name="button7" Width="75" />
            <Button Content="kolor nadwozia" Height="23" Name="button8" Width="103" />
            <Button Content="kolor wnetrza" Height="23" Name="button9" Width="86" />
            <Button Content="Dodatki" Height="23" Name="button10" Width="75" />
            <Button Content="Podsumowanie" Height="23" Name="button11" Width="91" />
        </WrapPanel>
    </Grid>
    
</Window>
